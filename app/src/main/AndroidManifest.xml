<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.beusterse.abfalllro"
    android:versionCode="4"
    android:versionName="@string/version">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.beusterse.abfalllro.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.beusterse.abfalllro.SetupActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"  />
        <activity
            android:name="de.beusterse.abfalllro.TrashCheckActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="de.beusterse.abfalllro.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <service android:name=".service.NotifyService" />
        <service android:name=".service.ScheduleService" />
    </application>

</manifest>
